         <backgroundColor>00000000</backgroundColor>
         <color>122063</color>
         <fontPath>./_inc/fonts/ClubbedToLife-aemJ.ttf</fontPath>
	     <fontSize>0.05</fontSize>
         <zIndex>6</zIndex>	     
      </text>            
   </view>
</feature>


